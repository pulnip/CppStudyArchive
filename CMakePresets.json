{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "x64",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "Ninja",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "ninja"
            }
        },
        {
            "name": "x64-base",
            "hidden": true,
            "inherits": [
                "x64",
                "Ninja"
            ],
            "binaryDir": "${sourceDir}/generated/build",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_CXX_EXTENSIONS": "OFF",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
            }
        },
        {
            "name": "GNUC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "Clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_CXX_FLAGS": "-fuse-ld=lld"
            }
        },
        {
            "name": "MSVC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "x64-GNUC",
            "inherits": [
                "x64-base",
                "GNUC"
            ]
        },
        {
            "name": "x64-Clang",
            "inherits": [
                "x64-base",
                "Clang"
            ]
        },
        {
            "name": "x64-MSVC",
            "inherits": [
                "x64-base",
                "MSVC"
            ]
        }
    ],
    "buildPresets": [
        {
            "name": "base-GNUC",
            "hidden": true,
            "configurePreset": "x64-GNUC"
        },
        {
            "name": "Debug(GNUC)",
            "inherits": "base-GNUC",
            "configuration": "Debug"
        },
        {
            "name": "Release(GNUC)",
            "inherits": "base-GNUC",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "base-Clang",
            "hidden": true,
            "configurePreset": "x64-Clang"
        },
        {
            "name": "Debug(Clang)",
            "inherits": "base-Clang",
            "configuration": "Debug"
        },
        {
            "name": "Release(Clang)",
            "inherits": "base-Clang",
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "base-MSVC",
            "hidden": true,
            "configurePreset": "x64-MSVC"
        },
        {
            "name": "Debug(MSVC)",
            "inherits": "base-MSVC",
            "configuration": "Debug"
        },
        {
            "name": "Release(MSVC)",
            "inherits": "base-MSVC",
            "configuration": "RelWithDebInfo"
        }
    ]
}