{
    "tasks": [
        {
            "type": "process",
            "label": "Run Project!",
            "command": "${config:MAIN_PROJECT_BIN}/RelWithDebInfo/${fileDirnameBasename}.exe",
            "linux": {
                "command": "${config:MAIN_PROJECT_BIN}/RelWithDebInfo/${fileDirnameBasename}"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "none",
            "detail": "run executable generated by CMake"
        },
        {
            "type": "cppbuild",
            "label": "Build this! (OpenCV)",
            "hide": true,
            "command": "clang++.exe",
            "args": [
                "-fdiagnostics-color=always", "-g", "${file}",
                "-O2", "-DNDEBUG", "-Wall",
                "-I${config:DEV_SYS_INCLUDE}/opencv4",
                "-I${config:WORKSPACE_INCLUDE}",
                "-lstdc++exp",
                "-lopencv_core", "-lopencv_imgcodecs", "-lopencv_imgproc",
                "-lopencv_video", "-lopencv_videoio", "-lopencv_highgui",
                "-o", "${config:CVTEST_BIN}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": "build",
            "detail": "Build OpenCV source file."
        },
        {
            "type": "process",
            "label": "Run this! (OpenCV)",
            "command": "${config:CVTEST_BIN}/${fileBasenameNoExtension}.exe",
            "options": {
                "cwd": "${workspaceFolder}/assets"
            },
            "dependsOn": ["Build this! (OpenCV)"],
            "problemMatcher": [],
            "group": "none",
            "detail": "run executable generated by CMake"
        }
    ],
    "version": "2.0.0"
}
